BoxLayout:
    orientation: "vertical"
    BoxLayout:
        TextInput:
            id: user_input
            text: ""
            on_text: app.handle_calculation()
            multiline: False
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.2
            Button:
                text: "Up"
                on_press: app.handle_calculation(1)
            Button:
                text: "Down"
                on_press: app.handle_calculation(-1)
